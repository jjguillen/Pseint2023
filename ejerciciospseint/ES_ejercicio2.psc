Algoritmo ES_ejercicio2
	
	Definir base, altura como Real;
	Definir perimetro, area como Real;
	
	Escribir "Dime la base del rectángulo";
	Leer base;
	
	Escribir "Dime la altura del rectángulo";
	Leer altura;
	
	perimetro <- (2 * base) + (2 * altura);
	area <- base * altura;
	
	Escribir "El perímetro de tu rectángulo es ",perimetro;
	Escribir "El área de tu rectángulo es ", area;
	
FinAlgoritmo
