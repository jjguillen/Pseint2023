Algoritmo ES_ejercicio3
	
	Definir numero1, numero2 Como Real;
	Definir suma, resta, multi, divi Como Real;
	
	Escribir "Dime el primer número";
	Leer numero1;
	Escribir "Dime el segundo número";
	Leer numero2;
	
	suma <- numero1 + numero2;
	resta <- numero1 - numero2;
	multi <- numero1 * numero2;
	divi <- numero1 / numero2;
	
	Escribir "Su suma es ",suma;
	Escribir "Su resta es ",resta;
	Escribir "Su multiplicación es ",multi;
	Escribir "Su división es ",divi;
	
FinAlgoritmo
