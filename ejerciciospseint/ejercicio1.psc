Algoritmo longArea
	
	Definir radio como Real; //Datos de entrada
	Definir long, area Como Real; //Datos de salida	
	
	Escribir "Introduce el radio de la circunferencia";
	Leer radio;	
	
	long <- 2 * PI * radio;
	area <- PI * radio * radio;	
	
	Escribir "La longitud de la circunferencia es " , long;
	Escribir "El área de la circunferencia es ", area;	
	
	
FinAlgoritmo
