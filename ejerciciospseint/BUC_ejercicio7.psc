Algoritmo BUC_ejercicio7
	
	Definir kilomPersona1, kilomPersona2 Como Entero;
	
	kilomPersona1 <- 70;
	kilomPersona2 <- 151;
	
	Mientras kilomPersona1 < kilomPersona2 Hacer
		kilomPersona1 <- kilomPersona1 + 1;
		kilomPersona2 <- kilomPersona2 - 1;
		
		Escribir kilomPersona1," - ",kilomPersona2;
	FinMientras
	
	Escribir "Kilómetros de la persona 1 ", kilomPersona1;
	Escribir "Kilómetros de la persona 2 ", kilomPersona2;
	
	
FinAlgoritmo
